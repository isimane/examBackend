generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? // Nullable field for soft delete
  tasks     Task[]    // One-to-many relationship with Task
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  ARCHIVED
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      TaskStatus
  dueDate     DateTime?
  userId      String   // Change to String to match User id type
  user        User     @relation(fields: [userId], references: [id]) // Establish relationship
  categoryId  Int?     // Optional relationship to Category
  category    Category? @relation(fields: [categoryId], references: [id]) // Establish relationship
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  tasks     Task[]   // One-to-many relationship with Task
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}